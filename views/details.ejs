<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
</head>

<body>
    <%- include('./partials/nav.ejs') %>
        <div class="detail-content">
            <h1>
                First Name:
                <%= arr.title %>
            </h1>
            <h2>
                Last Name:
                <%= arr.snippet %>
            </h2>
            <h3>
                Middle Name:
                <%= arr.body %>
            </h3>
            <a id="delete"  data-name="<%= arr._id%>">Delete</a>
        </div>

        <script>
            const trashcan = document.getElementById('delete')
            trashcan.addEventListener('click', (e)=>{ 
                const url = `/delete/${trashcan.dataset.name}`
                console.log(trashcan.dataset.name)
                fetch(url,
                {
                    method: 'DELETE'
                })
                .then(res=>res.json())
                .then((data)=>{
                    console.log(data)
                    window.location.href = `${data.redirect}`
                }).catch(err=>console.log(err))
            })
        </script>
</body>

</html>